<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shenawynkov.jopfinder.LoginActivity">

    <EditText
        android:id="@+id/email_sign_up"
        android:layout_width="215dp"
        android:layout_height="40dp"
        android:layout_marginLeft="66dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="129dp"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="215dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/email_sign_up"
        app:layout_constraintRight_toRightOf="@+id/email_sign_up"
        app:layout_constraintTop_toBottomOf="@+id/email_sign_up"/>

    <Button
        android:id="@+id/sign_in_btn"
        android:layout_width="117dp"
        android:layout_height="50dp"
        android:text="Sign in "
        android:layout_marginTop="63dp"
        app:layout_constraintTop_toBottomOf="@+id/password"
        android:layout_marginLeft="49dp"
        app:layout_constraintLeft_toLeftOf="@+id/password"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/password"
        app:layout_constraintHorizontal_bias="0.097"/>

    <Button
        android:id="@+id/sign_up"
        android:layout_width="117dp"
        android:layout_height="50dp"
        android:layout_marginTop="37dp"
        android:text="Sign Up"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_btn"
        android:layout_marginLeft="-8dp"
        app:layout_constraintLeft_toLeftOf="@+id/sign_in_btn"/>
</android.support.constraint.ConstraintLayout>
