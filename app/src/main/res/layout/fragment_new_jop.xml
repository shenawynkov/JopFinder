<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    android:id="@+id/linear"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <EditText
        android:id="@+id/newjop_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:hint="title"
  />
    <EditText
        android:id="@+id/newjop_min_salary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:hint="min salary"
        android:inputType="number"

        />
    <EditText
        android:id="@+id/newjop_max_salary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:hint="max salary"
        android:inputType="number"

        />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:gravity="center"
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
       android:layout_weight="0.5"
        android:text="Carear Level"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:textSize="16sp"
        />
    <Spinner
        android:id="@+id/newjop_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"/>
</LinearLayout>
    <EditText
        android:id="@+id/newjop_description"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:hint="add description"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"      />



    <Button
        android:id="@+id/newjop_add_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/add_job"
        android:hint="Add Jop"

        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"/>
    </LinearLayout>



