<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shenawynkov.jopfinder.NewJopActivity"
    android:orientation="vertical">
    <EditText
        android:id="@+id/newjop_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="title"
  />
    <EditText
        android:id="@+id/newjop_min_salary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="min salary"
        android:inputType="number"

        />
    <EditText
        android:id="@+id/newjop_max_salary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="max salary"
        android:inputType="number"

        />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:gravity="center"
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
       android:layout_weight="0.5"
        android:text="Carear Level"
android:layout_margin="16dp"
        android:textSize="16sp"
        />
    <Spinner
        android:id="@+id/newjop_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_margin="16dp"/>
</LinearLayout>
    <EditText
        android:id="@+id/newjop_description"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:hint="add description"
        android:layout_margin="24dp"
      />



    <Button
        android:id="@+id/newjop_add_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/add_job"
        android:hint="Add Jop"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp"/>

</LinearLayout>
